# ===============================================
# TrustX - Docker Environment Configuration
# ===============================================
# Скопируйте этот файл как .env и заполните значения

# ==============================================
# DJANGO
# ==============================================
DEBUG=False
SECRET_KEY=your-super-secret-key-change-in-production-min-50-chars
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ==============================================
# SUPERUSER (создаётся автоматически при первом запуске)
# ==============================================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@trustx.io
DJANGO_SUPERUSER_PASSWORD=your-strong-admin-password

# ==============================================
# DATABASE
# ==============================================
DB_NAME=trustx
DB_USER=postgres
DB_PASSWORD=your-strong-database-password

# ==============================================
# TELEGRAM NOTIFICATIONS
# ==============================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# ==============================================
# CRYPTO PAYMENTS
# ==============================================
# Ваш TRC20 кошелёк для приёма платежей
MERCHANT_WALLET_ADDRESS=YOUR_TRC20_WALLET_ADDRESS

# TronGrid API ключ (https://www.trongrid.io/)
TRONGRID_API_KEY=YOUR_TRONGRID_API_KEY

# Сеть: mainnet или shasta (тестнет)
TRON_NETWORK=mainnet